<%-include('../cabecalho.ejs')%>
    <h1>Jogos</h1>
    <div>
        <form action="/jogo/lst" method="post">
            <input type="text" name="filtro" id="" placeholder="Digite o desenvolvedor para pesquisar">
            <button type="submit">Pesquisar</button>
        </form>
    </div>
    <a href="/jogo/add">Adicionar Jogo</a>
    <table>
        <tr>
            <th>Ano</th>
            <th>Gênero</th>
            <th>Desenvolvedor</th>
            <th>Classificação</th>
            <th>Plataforma</th>
            <th>Preço</th>
            <th>Ações</th>
        </tr>
      
        <%for (const {id, ano, genero, desenvolvedor, classificacao, plataforma, preco} of Jogos) {%>
        <tr>
            <td><%=ano%></td>
            <td><%=genero%></td>
            <td><%=desenvolvedor%></td>
            <td><%=classificacao%></td>
            <td><%=plataforma%></td>
            <td><%=preco%></td>
            <td><a href="/jogo/edt/<%=id%>">Editar</a>
            <a href="/jogo/del/<%=id%>">Excluir</a></td>
            
        </tr>
        <%}%>
    </table>
 <%-include('../rodape.ejs')%>